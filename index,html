<script type="text/javascript">
// Hail Satan .... just kidding.// 

function run() {
event.preventDefault() 
var textIn = document.getElementById("in")
             document.getElementById("out").innerHTML = Elian(textIn.value).join("")
   
}




// Letter array //
function Elian(text) {
  var charmap = {
    //Letters:
    a: "ﬧ",
    b: "コ",
    c: "┘",
    d: "п",
    e: "ߛ",
    f: "ப",
    g: "厂",
    h: "ⵎ",
    i: "ட",
    j: "ᒣ",
    k: "ᓗ",
    l: "ᒧ",
    m: "ᒉ",
    n: "ᑭ",
    o: "ᘂ",
    p: "ᒥ",
    q: "ᓕ",
    r: "ᒪ",
    s: "ᒭ",
    t: "ᓘ",
    u: "ᒨ",
    v: "ᒕ",
    w: "ᑮ",
    x: "ᒎ",
    y: "ᓟ",
    z: "ᓛ",

    //Numbers:

    0:"ᚗ",
    1:"ᚁ", 
    2:"ᚂ",
    3:"ᚃ",
    4:"ᚄ",
    5:"ᚅ",
    6:"ᚆ",
    7:"ᚇ",
    8:"ᚈ",
    9:"ᚉ",
  } 
  var letters = text.split("")
	var replacer = (ch) => {
  	var replacement = charmap[ch.toLowerCase()]
    return replacement || ch
  }
  return letters.map(replacer)
}
function Clear(){
     document.getElementById('in').value = "";
     document.getElementById('out').value = "";
}




